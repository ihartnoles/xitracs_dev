<div class="row-fluid">
     <div class="span5">
     	<h4><%=@school_name %> Departments</h4>
     </div><!--/span-->
</div>
<% @departments.each do |department| %>
<div class="row-fluid">
            <div class="span4">
              <div class="well sidebar-nav"  style="background-color:#fcf8e3;">
              <h5><%= department.name %> </h5>
              <p><%= department.count_by_dept(department.id) %></p>
              <p><a class="btn" href="#" onclick="window.location.href='<%= url_for :action => 'list_by_dept', :department_id => department.id %>'">View details &raquo;</a></p>
          		</div>
            </div><!--/span-->
<% end %>



<hr>

<%# provide(:title, 'Departments') %>
<% if current_user.group.name == "admin" %>
	<%= link_to "Return to Colleges", '/start', :class => "xbutton" %>
<% else %>
	<%= link_to image_tag('/assets/Previous_16x16.png'), '/precredentialing'%>
<% end%> 

<table class="no-zebra box round">
	<% if current_user.group.name == "admin" || current_user.group.name == "dean" %>
		<tr onclick="window.location.href='<%= url_for :action => 'list_by_school', :school_id => session[:school_id] %>'">
			<td>
				All Departments in this College				
			</td>
		</tr>
	<% end %>
	<% @departments.each do |department| %>
		<tr onclick="window.location.href='<%= url_for :action => 'list_by_dept', :department_id => department.id %>'">    
 			<td><%= department.name %> 
 				
 				
 					<%= department.count_by_dept(department.id) %>
 				
 			</td>
		</tr>
	<% end %>
</table>

