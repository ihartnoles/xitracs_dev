 <script type="text/javascript">

	function do_checkbox() {
		elem = document.getElementsByTagName("input");
		pending = document.getElementById("newhirereason_review_state_0");
		passed = document.getElementById("newhirereason_review_state_1");
		failed = document.getElementById("newhirereason_review_state_2");
		alert = document.getElementById("newhirereason_review_state_3");
		justdocs = document.getElementById("newhirereason_review_state_4");

		one_checked = false;
		for (var i = 0 ; i < elem.length ; i++ ) {
			if (elem[i].className == "check") {
				if (elem[i].checked == true) {
					pending.disabled = true;
					passed.disabled = true;
					if (alert.checked == false) {
						failed.checked = true;
					}
					one_checked = true;
				} 
			} 
		}	
		if (one_checked == false) {
			pending.disabled = false;
			passed.disabled = false;
			passed.checked = true;
		}		
	}
	
	function clear_all_checkboxes() {
		elem = document.getElementsByTagName("input");
		for (var i = 0 ; i < elem.length ; i++ ) {
			if (elem[i].className == "check") {
				elem[i].checked = false;
			}
		}
	}
	
	function set_all_checkboxes(what_to_do) {
		elem = document.getElementsByTagName("input");
		for (var i = 0 ; i < elem.length ; i++ ) {
			if (elem[i].className == "check") {
				elem[i].disabled = what_to_do;
			}
		}
	}
	
	function do_passed() {
		clear_all_checkboxes();
		set_all_checkboxes(true);		
	}
	
	function do_failed() {
		set_all_checkboxes(false);		
	}

	function do_alert() {
		set_all_checkboxes(false);		
	}	
	
	function do_justdocs(){
		set_all_checkboxes(false)
	}
</script>



