<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <!--Sidebar content-->
          <div class="well sidebar-nav" style="background-color:#fcf8e3;">
            <ul class="nav nav-list">
              <li class="nav-header" >Instructor Info:</li>
              <!--<li class="active"><a href="#">Link</a></li>-->
              <li><strong>Firstname:</strong> <%= @newhire.first_name %> </li>
              <li><strong>Lastname:</strong> <%= @newhire.last_name %></li>
              <li><strong>School:</strong> <%= @newhire_dept.school.description %></li>
              <li><strong>Department:</strong> <%= @newhire_dept.name %></li>
              <li><strong>Course:</strong> <%= @newhire.course_name(@newhire_course_to_review.id) %></li>
              
              <li><strong>Send Notification:</strong> <%= link_to image_tag('/assets/Send_16x16.png'),  newhires_review_msg_path(:newhire_id => @newhire.id) %></li>
              
               <li><%= link_to '[REVIEW]',
                        {:controller => 'newhires', :action => 'review_dialog',:newhire_id => params[:newhire_id], :course_id => params[:id]}, 
                            :onClick=>"window.open(this.href,'Review Team Review','height=500, width=700'); return false;" ,
                              :title => 'Review Team Review', :rel => 'tooltip'%></li>

                <li><%= link_to '[SIGN OFF]',
                        {:controller => 'newhires', :action => 'signoff_dialog',:newhire_id => params[:newhire_id], :course_id => params[:id]}, 
                            :onClick=>"window.open(this.href,'Sign off','height=500, width=700'); return false;" ,
                              :title => 'Sign off on this credential', :rel => 'tooltip'%></li>
            </ul>
          </div><!--/.well -->

     <% if false %>
           <div class="well sidebar-nav" style="background-color:#fcf8e3;">
            <ul class="nav nav-list">
              <li class="nav-header" >Reviewed by:</li>
              <!--<li class="active"><a href="#">Link</a></li>-->
                           <!--
              <li><strong>Send Notification:</strong> <%= link_to image_tag('/assets/Send_16x16.png'),  newhires_review_msg_path(:newhire_id => @newhire.id) %></li>
               -->
              
            </ul>
          </div><!--/.well -->

           <div class="well sidebar-nav" style="background-color:#fcf8e3;">
            <ul class="nav nav-list">
              <li class="nav-header" >Signoff By:</li>
                <% @newhire_signoffs.each do |s| %>
                  <li><%=  s.signed_off_by(s.user_id) %> <%= s.created_at.strftime('%m/%d/%Y %l:%M %P') %></li>
                 <% end %>             
            </ul>
          </div><!--/.well -->
      <% end %>
    </div>

    <div class="span9">
      <!--Body content-->
      <form>
              <!--<fieldset>
                <legend class="heading">Documents submitted to Provost:</legend>-->
                <h4 style="font-color:blue"> <%= link_to image_tag('/assets/Add_16x16.png'), 
                          {:controller => 'newhiredocuments', 
                            :action => 'index', 
                            :course_id => params[:id],
                            :newhire_id => params[:newhire_id]
                          },
                          :title => 'Add documents', :rel => 'tooltip'
                            
                            #,:source => 'detailscreen'}, 
                            #:onClick=>"window.open(this.href,'Details','height=550, width=600'); return false;"
                            %>
                            Documents submitted to Provost:
                </h4>
                <!--<div align="right">
                  <%= link_to image_tag('/assets/Add_16x16.png'), 
                          {:controller => 'newhiredocuments', 
                            :action => 'index', 
                            :course_id => params[:id],
                            :newhire_id => params[:newhire_id]
                          },
                          :title => 'Add documents', :rel => 'tooltip'
                            
                            #,:source => 'detailscreen'}, 
                            #:onClick=>"window.open(this.href,'Details','height=550, width=600'); return false;"
                            %>
                </div>-->
                  <table class="table">
                    <% if @newhiredocuments.count > 0 %>
                      <th>Name</th>
                      <th>Location</th>
                      <th>Type</th>
                      <% @newhiredocuments.each do |d| %>
                          <tr>
                            <td><%=  d.name %></td>  
                          <td><%=  d.location %></td>  
                          <td><%= d.newhiredoctype.name %></td> 
                          
                        </tr>
                      <% end %> 
                    <% else %>
                      <tr>
                        <td>
                          <div class="alert alert-error">
                            <div align="center">
                              Please ADD documents!
                            </div>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </table>
              <!--  </fieldset>
            </form> -->
            <form>
              <fieldset>
               <!-- <legend class="heading">Instructor Credentialed to Teach Based On:</legend> -->
                  <h4> 
                    <% if @newhirecredentials.count == 0 %>
                        <%= link_to image_tag('/assets/Add_16x16.png'),  new_newhirecredential_path(:newhire_id => params[:newhire_id], :course_id => params[:id]),:title => 'Add credentials', :rel => 'tooltip'  %>
                    <% end %>
                    Instructor Credentialed to Teach Based On:
                  </h4>
                      
                        <table  class="table">
                          <% if @newhirecredentials.count > 0 %>
                            <th>Reason</th>
                            <th>Explanation</th>
                            
                            <% @newhirecredentials.each do |c| %>
                                <tr>
                                  <td><%= c.qualificationreason.name %></td>  
                                <td><%=  c.qualification_explanation %></td> 
                                
                              </tr>
                            <% end %>
                          <% else %>
                            <tr>
                                <td>
                                  <div class="alert alert-error">
                                    <div align="center">
                                      Please enter the instructors credentials to teach
                                    </div>
                                  </div>
                                </td>
                              </tr>

                          <% end %> 
                          </table>
                </fieldset>
            </form>

            <form>
                <fieldset class="round">
                    <h4>
                       <%= link_to image_tag('/assets/Add_16x16.png'), newhirecredits_path(:newhire_id => params[:newhire_id], :course_id => params[:id]), :title => 'Add coursework', :rel => 'tooltip'  %>
                      Relevant Coursework:                      
                    </h4>                         
                             
                      <table  class="table">
                        <% if @newhire_credits_added.count > 0 %>
                          <th>Course ID</th>
                          <th>Course Name</th>
                          <th>Year Taken</th>
                          <th>Institution</th>
                          <th>Credits</th>
                          <th width="10%">Actions</th>
                            <% @newhire_credits_added.each do |cr| %>
                                <tr>
                                  <td><%=  cr.course_name %></td>  
                                <td><%=  cr.course_description %></td>  
                                <td><%=  cr.course_year %></td> 
                                <td><%=  cr.newhireinstitution.name %></td>
                                <td><%=  cr.course_credits %></td>
                                <td><%= link_to image_tag('/assets/Edit_16x16.png'), edit_newhirecredit_path(cr , :newhire_id => params[:newhire_id], :course_id => params[:id]), :title => 'Edit course', :rel => 'tooltip'  %>

                                  <%= link_to image_tag('/assets/Delete_16x16.png'), newhirecredit_path(cr , :newhire_id => params[:newhire_id], :course_id => params[:id]), :method => :delete, :class => "destroy", :confirm => "Are you sure you want to delete this coursework?",:title => 'Delete course', :rel => 'tooltip'
                                    %>
                                </td>
                              </tr>
                            <% end %> 
                        <% else %>
                          <tr>
                            <td>
                              <div class="alert alert-error">
                                <div align="center">
                                  Relevant Coursework N/A
                                </div>
                              </div>
                            </td>
                          </tr>

                        <% end %>
                        </table>
                  </fieldset>
            </form>

            <form>
                <fieldset class="round">
                 <h4>Additional Comments:</h4>
                    <table  class="table">
                      <% if @newhire_comments_added.count > 0 %>
                        <th>Comment</th>
                        <% @newhire_comments_added.each do |cm| %>
                          <tr>
                            <td><%= cm.comment %></td>              
                          </tr>
                        <% end %>
                      <% else %>
                        <tr>
                          <td>
                            <div class="alert alert-info">
                              <div align="center">
                                No Comments.
                              </div>
                            </div>
                          </td>
                        </tr>

                      <% end %>
                    </table>
                  </fieldset>
            </form>

           <%= render 'notification_messages' %>


       <% if session[:review] && session[:group_name] == "admin" %>
        


        <% if (@newhire_reasons_added.count > 0) %>
          <form>
            <fieldset class="round">
              <h4>Review Comments:</h4>  
              <table  class="table">
                <th>Status</th>
                <th>Comment</th>
                <th>Reviewed By</th>
                <th>Reviewed On</th>                
                <% @newhire_reasons_added.each do |nhr| %>
                  <tr>
                    <td><%= nhr.review_state_name(nhr.review_state) %></td>
                    <td><%= nhr.review_comments %></td>           
                    <td><%= nhr.reviewer_name(nhr.reviewer_id) %></td>

                    <td><%= nhr.created_at.strftime('%m/%d/%Y %l:%M %P') %></td>
                  </tr> 
                <% end %>
              </table>
            </fieldset> 
          </form>
        <% end %>

     <% end %>







    </div> 
  </div>
</div>
