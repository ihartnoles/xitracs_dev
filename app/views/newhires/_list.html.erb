<fieldset class="round" >
	<h4>
			<!--
			<% if current_user.group.name != "chair" %>
				<a href="javascript:history.back();" title="Go Back" rel="tooltip"><i class="icon-arrow-left"></i></a> 
			<% end %>
		   -->
			<%= @newhire_count %> New Hire<% if @newhires.count > 1 %>s<% end %>
		
	</h4>

		<% if @newhires.nil? || @newhires.count == 0 %>
			<div class="error round">
		  			<center>No New Hires Available</center>
		  	</div>

		<% else %>
				<table class="table table-condensed table-striped" id="example">
				  <th>Lastname</th>
				  <th>First</th>
				  <th>School</th>
				  <th>Department</th>
				  <th>Added on</th>
				  <th width="10%">Actions</th>
				    <% @newhires.each do |newhire| %>
						  <tr>
						  	<td><%= newhire.last_name %></td>
						  	<td><%= newhire.first_name %></td>
						  	<td><%= newhire.school_name %></td>
						  	<td><%= newhire.dept_name %></td>
						    <td><%= newhire.created_at.strftime('%m/%d/%Y %l:%M %P') %></td>
						  	<td>
						  		<%= link_to image_tag('/assets/Preview_16x16.png'), newhireshowcourses_path(newhire), :title => 'See details ', :rel => 'tooltip' %>

						  		<%= link_to image_tag('/assets/Edit_16x16.png'), edit_newhire_path(:id => newhire, :dept_id => params[:department_id]),:title => 'Delete new hire', :rel => 'tooltip'
                                    %>

						  		<%= link_to image_tag('/assets/Delete_16x16.png'), newhire_delete_newhire_path(:id => newhire, :dept_id => params[:department_id]), :method => :delete_newhire, :class => "destroy", :confirm => "Are you sure you want to delete this new hire entry?",:title => 'Delete new hire', :rel => 'tooltip'
                                    %>
						   </td>
						  </tr>
					  <% end %>
				</table>  
		<% end %>

</fieldset>