<div class="wrappersmall">
<div class="coursework">
		<fieldset class="round">
			<legend>Instructor Name:</legend>
				<table class="no-zebra no-hover">
					<%= form_for @newhire do |f| %>
					<tr>
						<td><strong>Firstname:</strong></td>
						<td><%= text_field_tag 'first_name'%></td>
					</tr>

					<tr>
						<td><strong>Middle name:</strong></td>
						<td><%= text_field_tag 'middle_name'%></td>
					</tr>

					<tr>
						<td><strong>Last name:</strong> </td>
						<td><%= text_field_tag 'last_name'%></td>
					</tr>

				</table>
				<%= f.submit "Save & Continue" %>
				<% end %>
		</fieldset>
</div>
</div>
	
