<fieldset class="round">
          <legend>Signoff:</legend>  
            <table class="profile no-zebra no-hover">
             <%= form_for @newhiresignoff, :url => '/newhires/save_signoff' do |f| %>
                <%= hidden_field_tag 'newhire_id', params[:newhire_id] %>
                <%= hidden_field_tag 'course_id', params[:course_id] %>

                
                <tr>
                  <td>
                <!-- TO DO: add a status value to DB and change these fieldnames -->
                 <%= f.radio_button :signed_off , "1"%> Signoff and notify 
                  
                  <% if session[:group_name] == "chair" %>          
                   Dean's office
                  <% end %>
                  <% if session[:group_name] == "dean" %>          
                   Provost's office
                  <% end %>
                  <% if session[:group_name] == "admin" %>          
                   Provost's office
                  <% end %>

                  <br>

                  <%= f.radio_button :signed_off , "0" %> Return to
                  <% if session[:group_name] == "chair" %>          
                   Department
                  <% end %>
                  <% if session[:group_name] == "dean" %>          
                   Department Chair
                  <% end %>
                  <% if session[:group_name] == "admin" %>          
                   Dean's office
                  <% end %>

                  for corrections
                </td>
                </tr>         
                <tr>
                  <td>
                    Send to:<br>
                    <%= select_tag 'send_to', 
                        options_for_select(@send_to.collect{ |u| [u.name, u.id] }) %>
                  </td>
                </tr>
                <tr>
                  <td><strong> Comments: </strong></td>
                </tr>
                <tr>
                  <td><%= f.text_area :comment, :class => 'ckeditor' %><br/></td>
                </tr>
                <tr>
                  <td><%= f.submit  "Submit", :id => "Submit" ,:class => 'btn btn-small btn-primary' %></td>
                </tr>


              </table>
                
                
              <% end %>    
            </fieldset>
