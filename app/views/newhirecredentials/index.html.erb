
<%= render :partial => "newhires/newhirename" %>

<fieldset class="round">
      <legend>Instructor Credentials:</legend>
      <br><strong>The instructor is credentialed to teach:</strong><br>
      <%= form_for @newhirecredential do |c| %>
        <% @qualificationreasons.each do |qr| %>
                      <br><%= radio_button_tag  'qualificationreason_name', qr.name, qr.id, {:onclick => "do_inst();"} %>
                    <%=  qr.name.humanize %>
                    <% end %> 
            <br />
            <br />
            <p>
            <strong>Explanation of instructor's qualifications:</strong><br>
                 <%= text_area_tag 'qualification_explanation' %>          
            </p>
            <p>
             Click <%= c.submit "Save & Continue" %> to finish this section and continue precredentialing.

            </p>
       <% end %>
</fieldset>

<%#= link_to 'New Newhirecredential', new_newhirecredential_path %>
