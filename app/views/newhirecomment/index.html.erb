<%#= @newhire.details %> <br>

<div id="wrapper">
  <div id="middle">
    <div id="container">

		<div id="content">
			<fieldset class="round">
				<legend>
					Additional Comments: 
				</legend>
				<table>
					<tr>
						<td>Comments to assist with establishing credentials to teach</td>
					</tr>
					<tr>
						<td>
							<%= form_for @comment,  :url => newhirecomment_create_path  do |f| %>
							    <%= hidden_field_tag 'newhire_id', @newhire.id %>
								<%= f.text_area :comment, :placeholder =>  "Additional Comments or other Justification such as Research or Professional Certifications" %> 	
								<br/>
								Click <%= f.submit  "Save", :disabled => current_user.ro %> to save this Qualification/Comment and finish the form.
								<br/>
								<!--
								Click <%#= f.submit  "Finish", :disabled => current_user.ro %> to finish the Certification of Credentials and Qualifications
								-->
							<% end %>		

						</td>
					</tr>
				</table>
			</fieldset>
		</div>
	</div><!-- #container-->

	 <div class="sidebar" id="sideLeft" style=" -moz-border-radius: 20px;
	    -webkit-border-radius: 20px;
	    -khtml-border-radius: 20px;
	    border-radius: 20px;">
	        <%= @newhire.details %>
      </div>

  </div><!-- #middle-->
</div><!-- #wrapper -->