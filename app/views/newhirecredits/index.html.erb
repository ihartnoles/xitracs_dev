<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <!--Sidebar content-->
      <!--Sidebar content-->
      <%= render 'newhires/instructorinfo_basic' %>
    </div>
    <div class="span9">
      <!--Body content-->
     <%= form_for(@newhirecredits) do |f| %>
		<fieldset class="round">
			<legend>
				Add Relevant Coursework: 
			</legend>
						
				<%= hidden_field_tag 'newhire_id', params[:newhire_id] %>
                <%= hidden_field_tag 'course_id', params[:course_id] %>
				<%= hidden_field_tag 'source', 'New' %>

				<table class="profile no-zebra">
					<tr>	
						<th>Course ID (ex: CDA 6031)</th>
						<th>Course Name (ex: Data Mining)</th>
						<th>Course Year (ex: 1995)</th>
						
						<th>Course Credits (ex: 3)</th>
						
						</tr>
					<tr>
						<td><%= f.text_field :course_name,  :class => "text" %></td>
						<td><%= f.text_field :course_description,  :class => "text"  %></td>
						<td><%= f.text_field :course_year,  :class => "text"  %></td>
						
						<td><%= f.text_field :course_credits, :class => "text"  %></td>
						
					</tr>
					<tr>
						<td colspan="4">
							<strong>Institution:</strong><br>
							<%= collection_select(:newhirecredit,
												   :newhireinstitution_id,		   
												   @newhireinstitutions,
												   :id,
												   :name
													)%> </td>
					</tr>
					<tr>
				    	<td colspan="4"> 	
				 			Click <%= f.submit 'Add', :id => "Add" , :disabled => current_user.ro, :class => "btn" %> to save this course.<br/><br/>

									Click <%= f.submit 'Done', :id => "Done", :disabled => current_user.ro,  :class => "btn" %> to complete this credential.
					 			</td>
				 			
				 		</td>
			 		</tr>			
				</table>
			
			</fieldset>
		<% end %>

		<form>  
					<% if @newhire_credits_added.count > 0 %>
						<fieldset class="round">
							<legend>Relevant Coursework Added:</legend>
							<table>
							<tr>

								<th>Course ID</th>
								<th>Course Name</th>
								<th>Course Year </th>
								<th>Institution</th>
								<th>Course Credits</th>


							<tr>

							<% @newhire_credits_added.each do |cr| %>
							<tr>
								<td><%=  cr.course_name %> </td>
								<td><%=  cr.course_description %> </td>
								<td><%=  cr.course_year %> </td>
								<td><%=  cr.newhireinstitution.name %></td>
								<td><%=  cr.course_credits %> </td>

							</tr>



							<% end %>

							</table>
					   </fieldset>


					<% end %>
			</form>
    </div>
  </div>
</div>
