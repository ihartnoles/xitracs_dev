
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <!--Sidebar content-->
      	 <div class="well sidebar-nav"  style="background-color:#fcf8e3;">
            <ul class="nav nav-list">
              <li class="nav-header">Instructor Info:</li>
              <!--<li class="active"><a href="#">Link</a></li>-->
              <li><strong>Firstname:</strong> <%= @newhire.first_name %> </li>
              <li><strong>Lastname:</strong> <%= @newhire.last_name %></li>
              <li><strong>School:</strong> <%= @newhire_dept.school.description %></li>
              <li><strong>Department:</strong> <%= @newhire_dept.name %></li>

            </ul>
          </div><!--/.well -->
    </div>
    <div class="span9">
      <!--Body content-->
     			<%= form_for @newhirecourse do |f| %>
				<%= hidden_field_tag 'newhire_id', @newhire.id %>
      	<fieldset class="round">
								<legend>To Teach:</legend>
								<table  class="no-zebra no-hover">
								
									<tr>
										<td><strong>Course Prefix and Number:</strong></td>
										<td> <%= text_field_tag 'course_name' %></td>
									</tr>

									<tr>
										<td><strong>Course title:</strong> </td>
										<td><%= text_field_tag 'course_title' %></td>
									</tr>


									<tr>
										<td><strong>Brief Course Description:</strong></td>
										<td><%= text_area_tag 'course_description' %></td>
									</tr>

									<tr>
										<td colspan="2">
											&nbsp;
										</td>
									</tr>	
									<tr>
										<td colspan="2">
										Click <%= f.submit 'Add', :id => "Add" , :disabled => current_user.ro, :class => 'btn btn-small btn-primary' %> to save this course.</p>
									</tr>
									<tr>
										<td colspan="2">
											Click <%= f.submit 'Continue', :id => "Continue" , :class => 'btn btn-small btn-primary' %> to finish this section and continue precredentialing.
										</td>
									</tr>
									
								</table>
							</fieldset>
     <% end %>
    </div>
  </div>
</div>
