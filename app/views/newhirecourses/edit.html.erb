
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <!--Sidebar content-->
       <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <li class="nav-header">Instructor Info:</li>
              <!--<li class="active"><a href="#">Link</a></li>-->
              <li><strong>Firstname:</strong> <%= @newhire.first_name %> </li>
              <li><strong>Lastname:</strong> <%= @newhire.last_name %></li>
              

            </ul>
          </div><!--/.well -->
    </div>
    <div class="span9">
      <!--Body content-->
      <%= form_for(@newhirecourse) do |f| %>
				<%= hidden_field_tag :newhire_id, params[:newhire_id] %>		
      	<fieldset class="round">
			<legend>To Teach:</legend>
			

				<table  class="table table-striped">
					<tr>
						<td><strong>Course Prefix and Number:</strong></td>
						<td> <%= f.text_field :name %></td>
					</tr>

					<tr>
						<td><strong>Course title:</strong> </td>
						<td><%= f.text_field :title %></td>
					</tr>


					<tr>
						<td colspan="2"><strong>Brief Course Description:</strong>
							<%= f.text_area :description %></td>
					</tr>

					<tr>
						<td colspan="2">
						Click <%= f.submit 'Save', :id => "Save" , :disabled => current_user.ro %> to save this course.</p>
					</tr>
				</table>
			
		</fieldset>

      <% end %>

 	</div>
  </div>
</div>